<%= render "html_header" %>
<%= render "html_sidebar" %>

<div class="mainContainer">

    <div class="pageTitleContainer">
        <div class="pageTitle"><%= @category.title %> tasks</div>
    </div>

    <div class="mainSubContainer">
 
        <div class="tasksContainer">
            <div class="tasks">
                <%= render @tasks %>
            </div>
        </div>

        <div class="formContainer">
            <div class="pageTitle">add task</div>
            <%= render "tasks/form", category: @category, task: @category.tasks.build %>
        </div>
    </div>
</div>